<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:id="@+id/det">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:padding="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/dname"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:text="Name"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtype"
                android:layout_width="wrap_content"
                android:layout_height='33dp'
                android:layout_below="@+id/dname"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="180dp"
                android:layout_toStartOf="@+id/dquantity"
                android:text="Food Type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dquantity"
                android:layout_width="wrap_content"
                android:layout_height='33dp'
                android:layout_below="@+id/dname"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="6dp"
                android:text="Quantity"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dstate"
                android:layout_width="wrap_content"
                android:layout_height='33dp'
                android:layout_below="@+id/dtype"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="180dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/phone1"
                android:text="State"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phone1"
                android:layout_width="wrap_content"
                android:layout_height='33dp'
                android:layout_below="@+id/dquantity"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="10dp"
                android:text="Phone"
                android:textSize="20sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>